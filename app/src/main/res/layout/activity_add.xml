<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAdd"
    android:screenOrientation="portrait"
    android:background="@drawable/back2">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/button_back"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/shape_picture"
            android:backgroundTint="@color/black"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="9dp"
            android:text="Create task"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/button_delete"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="300dp"
            android:background="@drawable/shape_picture"
            android:backgroundTint="@color/redButton"
            android:src="@drawable/ic_delete"
            android:visibility="invisible" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Title:"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />

    <EditText
        android:id="@+id/title_add"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/round_shape"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:text="Message:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_add" />

    <EditText
        android:id="@+id/message_add"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@drawable/round_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/take_picture"
        app:layout_constraintTop_toBottomOf="@+id/message_add"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/take_picture_view"/>

        <Button
            android:id="@+id/take_picture_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/blueButton"
            android:text="Take picture"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/take_picture"
        tools:layout_editor_absoluteX="0dp">


        <Button
            android:id="@+id/save_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/blueButton"
            android:text="Create" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/blueButton"
            android:text="Save" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>